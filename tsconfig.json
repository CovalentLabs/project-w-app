{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "noEmitHelpers": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@app/*": ["./src/@app/*"]
    }
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "exclude": [
    "**/_*/**",
    "**/_*",
    "./_*/**",
    "**/node_modules/**",
    "./node_modules",
    "./templates"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  }
}
